<%= error_messages_for 'project_role' %>

<%= form_tag "settings[permissions][]" do %>

<h3><%= l(:label_permissions) %></h3>
<div class="box tabular" id="permissions">
  <% perms_by_module = Role.first.setable_permissions.group_by {|p| p.project_module.to_s} %>
  <% perms_by_module.keys.sort.each do |mod| %>
  <fieldset><legend><%= mod.blank? ? l(:label_project) : l_or_humanize(mod, :prefix => 'project_module_') %></legend>
    <% perms_by_module[mod].each do |permission| %>
    <label class="floating">
      <%= l_or_humanize(permission.name, :prefix => 'permission_') %>
    </label>
    <% end %>
  </fieldset>
  <% end %>
  <br /><%= check_all_links 'permissions' %>
  <%= hidden_field_tag 'settings[permissions][]', '' %>
  <%= submit_tag l(:button_save) %>
  <% end %>
</div>
