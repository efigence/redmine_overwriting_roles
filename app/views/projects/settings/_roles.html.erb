<div class="project-roles-wrapper" style="width:40%;">

  <% @roles = Role.all %>

  <table class='list'>
    <thead>
      <tr>
        <th>Role</th>
      </tr>
    </thead>
    <tbody>
      <% @roles.each do |role| %>
      <tr>
        <td class='name'><%= link_to role.name, edit_project_role_path(@project, role) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>
